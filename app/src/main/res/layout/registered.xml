<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >




    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            style="@style/LoginFormContainer"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Registration details:\n"
                android:textSize = "20sp"
                android:id="@+id/textView"
                android:layout_gravity="start"
                android:layout_alignParentTop="true"
                android:textColor="#000000"/>

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Full Name:"
                android:textStyle="bold"
            android:id="@+id/textView2"
            android:textColor="#000000"
            android:textSize="21sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView" />

            <TextView
                android:id="@+id/firstname"
                android:layout_width="fill_parent"
                android:layout_alignParentStart="true"
                android:layout_height="40dp"
                android:layout_below="@+id/textView2"
                android:textColor="#000000"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Last Name:"
                android:id="@+id/textView5"
                android:textColor="#000000"
                android:textSize="21sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/firstname"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/lastname"
                android:layout_width="fill_parent"
                android:layout_alignParentStart="true"
                android:layout_height="40dp"
                android:layout_below="@+id/textView5"
                android:textColor="#000000"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Username:"
                android:id="@+id/textView3"
                android:textColor="#000000"
                android:textSize="21sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/lastname"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:id="@+id/username"
                android:layout_below="@+id/textView3"
                android:textColor="#000000"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Email:"
                android:id="@+id/textView4"
                android:textColor="#000000"
                android:textSize="21sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/username"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:ems="10"
                android:id="@+id/email"
                android:layout_below="@+id/textView4"
                android:textColor="#000000"
                android:textSize="20sp"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Blood Type:"
                android:id="@+id/textView6"
                android:textColor="#000000"
                android:textSize="21sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/email"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:ems="10"
                android:id="@+id/bloodtype"
                android:layout_below="@+id/textView6"
                android:textColor="#000000"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Rhesus:"
                android:id="@+id/textView7"
                android:textColor="#000000"
                android:textSize="21sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                android:layout_below="@+id/bloodtype" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:ems="10"
                android:id="@+id/rhesus"
                android:layout_below="@+id/textView7"
                android:textColor="#000000"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Gender:"
                android:id="@+id/textView8"
                android:textColor="#000000"
                android:textSize="21sp"
                android:layout_alignParentLeft="true"
                android:textStyle="bold"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/rhesus" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:ems="10"
                android:id="@+id/gender"
                android:layout_below="@+id/textView8"
                android:textColor="#000000"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:ems="10"
                android:id="@+id/registeredat"
                android:layout_below="@+id/textView9"
                android:textColor="#000000"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Created At:"
                android:id="@+id/textView9"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                android:layout_below="@+id/gender" />


            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Back to Login"
                android:id="@+id/login"
                android:textColor="#000000"
                android:layout_below="@+id/registeredat"
                android:textSize="15sp"
                android:layout_alignRight="@+id/firstname"
                android:layout_alignEnd="@+id/firstname"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:background="@drawable/btn_red_back" />




        </RelativeLayout>
    </ScrollView>

</merge>