<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#ffff2828">

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/splashLayout"
		android:orientation="horizontal"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="20dp">

		<ImageView
			android:layout_width="60dp"
			android:layout_height="match_parent"
			android:adjustViewBounds="true"
			android:src="@drawable/ic_impeller_wb"
			android:id="@+id/splashImage"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:text=" SocioBlood"
			android:textColor="#ffffff"
			android:textSize="48sp"
			android:textIsSelectable="false"
			android:id="@+id/splashText"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:text="Â®"
			android:id="@+id/textView10"
			android:singleLine="true"
			android:layout_gravity="top"
			android:layout_marginBottom="10dp"
			android:paddingBottom="10dp" />
	</LinearLayout>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@+id/splashLayout"
		android:layout_alignRight="@+id/splashLayout"
		android:layout_alignEnd="@+id/splashLayout"
		android:layout_alignLeft="@+id/splashLayout"
		android:layout_alignStart="@+id/splashLayout"
		android:weightSum="1">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="   Act Socially, \nDonate Globally"
			android:id="@+id/textView7"
			android:layout_gravity="center_horizontal"
			android:paddingTop="20dp"
			android:textStyle="bold" />

		<Space
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_gravity="center_horizontal"
			android:paddingTop="10dp"
			android:layout_weight="0.32" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:text="@string/developers"
			android:id="@+id/textView5"
			android:layout_gravity="center_horizontal"
			android:paddingTop="20dp"
			android:textStyle="bold" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:text="@string/yudiandrean"
			android:id="@+id/textView11"
			android:layout_gravity="center_horizontal"
			android:textColor="#ff000000"
			android:layout_marginTop="5dp" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:text="Rafi Kurnia Putra"
			android:id="@+id/textView12"
			android:layout_gravity="center_horizontal"
			android:textColor="#ff000000"
			android:layout_marginTop="5dp" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:text="Pradipta Baskara"
			android:id="@+id/textView13"
			android:layout_gravity="center_horizontal"
			android:textColor="#ff000000"
			android:layout_marginTop="5dp" />

	</LinearLayout>

</RelativeLayout>