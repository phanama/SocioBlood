<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
     >

    <!-- Login progress -->



    <!-- Login form -->

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            style="@style/LoginFormContainer"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register : Please enter your details\n"
                android:textSize = "20dp"
                android:id="@+id/textView"
                android:layout_gravity="start"
                android:layout_alignParentTop="true"
                android:textColor="#000000"/>


            <EditText
                android:id="@+id/fullname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Fullname"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/input_register_bg"
                android:layout_below="@+id/textView"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textSize="18dp"
                android:layout_alignParentStart="false" />



            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:ems="10"
                android:id="@+id/username"
                android:hint="Enter desired username"
                android:layout_below="@+id/fullname"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#000000"/>



            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:ems="10"
                android:id="@+id/email"
                android:hint="Enter email"
                android:inputType="textEmailAddress"
                android:layout_below="@+id/username"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#000000"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10"
                android:id="@+id/password"
                android:hint="*********"
                android:inputType="textPassword"
                android:layout_below="@+id/email"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:text="Blood Type"
                android:id="@+id/textView6"
                android:textColor="#000000"
                android:textSize="18dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView8" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:text="Rhesus"
                android:id="@+id/textView7"
                android:textColor="#000000"
                android:textSize="18dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView6" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:text="Gender"
                android:id="@+id/textView8"
                android:textColor="#000000"
                android:textSize="18dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/password" />

            <Spinner
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:ems="10"
                android:id="@+id/rhesus_spinner"
                android:layout_below="@+id/bloodtype_spinner"
                android:textColor="#000000"/>

            <Spinner
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:ems="10"
                android:id="@+id/gender_spinner"
                android:layout_below="@+id/password"
                android:textColor="#000000"/>

            <Spinner
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:ems="10"
                android:id="@+id/bloodtype_spinner"
                android:layout_below="@+id/gender_spinner"
                android:textColor="#000000"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="REGISTER"
                android:id="@+id/register"
                android:textSize="15sp"
                android:background="@drawable/btn_red_back"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dip"
                android:layout_below="@+id/textView7"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="BACK TO LOGIN"
                android:id="@+id/bktologin"
                android:textSize="15sp"
                android:background="@drawable/btn_red_back"
                android:layout_below="@+id/register"
                android:layout_marginTop="10dip"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:id="@+id/register_error"
                android:layout_below="@+id/bktologin"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dip"/>










        </RelativeLayout>
    </ScrollView>

</merge>