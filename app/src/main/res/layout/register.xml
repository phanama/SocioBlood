<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
     >

    <!-- Login progress -->



    <!-- Login form -->

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            style="@style/LoginFormContainer"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register : Please enter your details\n"
                android:textSize = "20sp"
                android:id="@+id/textView"
                android:layout_gravity="start"
                android:layout_alignParentTop="true"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:id="@+id/register_error"
                android:layout_below="@+id/textView"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dip"/>


            <EditText
                android:id="@+id/firstname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Firstname"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_marginTop="10dip"
                android:textColor="@color/input_register_bg"
                android:layout_below="@+id/register_error"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textSize="18sp"
                android:layout_alignParentStart="false" />

            <EditText
                android:id="@+id/lastname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Lastname"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/input_register_bg"
                android:layout_below="@+id/firstname"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textSize="18sp"
                android:layout_alignParentStart="false" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:ems="10"
                android:id="@+id/username"
                android:hint="Enter desired username"
                android:layout_below="@+id/lastname"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#000000"/>



            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:ems="10"
                android:id="@+id/email"
                android:hint="Enter email"
                android:inputType="textEmailAddress"
                android:layout_below="@+id/username"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#000000"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10"
                android:id="@+id/password"
                android:hint="*********"
                android:inputType="textPassword"
                android:layout_below="@+id/email"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#000000"/>



            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:ems="10"
                android:id="@+id/rhesus_spinner"
                android:layout_below="@+id/bloodtype_spinner"
                android:textColor="#000000"/>

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:ems="10"
                android:id="@+id/gender_spinner"
                android:layout_below="@+id/password"
                android:textColor="#000000"/>

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:ems="10"
                android:id="@+id/bloodtype_spinner"
                android:layout_below="@+id/gender_spinner"
                android:textColor="#000000"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="REGISTER"
                android:id="@+id/register"
                android:textSize="15sp"
                android:background="@drawable/btn_red_back"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dip"
                android:layout_below="@+id/rhesus_spinner"/>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="BACK TO LOGIN"
                android:id="@+id/bktologin"
                android:textSize="15sp"
                android:background="@drawable/btn_red_back"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/register"
                android:layout_marginTop="10dip"/>



        </RelativeLayout>
    </ScrollView>

</merge>