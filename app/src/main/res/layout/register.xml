<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
     >

    <!-- Login progress -->



    <!-- Login form -->

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            style="@style/LoginFormContainer"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register : Please enter your details\n"
                android:textSize = "20dp"
                android:id="@+id/textView"
                android:layout_gravity="start"
                android:layout_alignParentTop="true"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:text="Full Name"
                android:id="@+id/textView2"
                android:textColor="#000000"
                android:textSize="18dp"
                android:layout_above="@+id/username"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView" />

            <EditText
                android:id="@+id/fullname"
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:hint="Enter your full name here"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#000000"
                android:layout_below="@+id/textView"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textSize="18dp"
                android:layout_alignParentStart="false" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:text="Username"
                android:id="@+id/textView3"
                android:textColor="#000000"
                android:textSize="18dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView2" />

            <EditText
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:ems="10"
                android:id="@+id/username"
                android:hint="Enter desired username"
                android:layout_below="@+id/fullname"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:text="Email"
                android:id="@+id/textView4"
                android:textColor="#000000"
                android:textSize="18dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView3" />

            <EditText
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:ems="10"
                android:id="@+id/email"
                android:hint="Enter email"
                android:inputType="textEmailAddress"
                android:layout_below="@+id/username"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:text="Password"
                android:id="@+id/textView5"
                android:textColor="#000000"
                android:textSize="18dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView4" />

            <EditText
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:ems="10"
                android:id="@+id/password"
                android:hint="*********"
                android:inputType="textPassword"
                android:layout_below="@+id/email"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:text="Blood Type"
                android:id="@+id/textView6"
                android:textColor="#000000"
                android:textSize="18dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView8" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:text="Rhesus"
                android:id="@+id/textView7"
                android:textColor="#000000"
                android:textSize="18dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView6" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:text="Gender"
                android:id="@+id/textView8"
                android:textColor="#000000"
                android:textSize="18dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView5" />

            <Spinner
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:ems="10"
                android:id="@+id/rhesus_spinner"
                android:layout_below="@+id/bloodtype_spinner"
                android:textColor="#000000"/>

            <Spinner
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:ems="10"
                android:id="@+id/gender_spinner"
                android:layout_below="@+id/password"
                android:textColor="#000000"/>

            <Spinner
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:ems="10"
                android:id="@+id/bloodtype_spinner"
                android:layout_below="@+id/gender_spinner"
                android:textColor="#000000"/>

            <Button
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:textColor="#000000"
                android:text="Register"
                android:id="@+id/register"
                android:textSize="13dp"
                android:background="@drawable/btn_red_back"
                android:layout_alignTop="@+id/bktologin"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:textColor="#000000"
                android:text="Back To Login"
                android:id="@+id/bktologin"
                android:textSize="13dp"
                android:background="@drawable/btn_red_back"
                android:layout_below="@+id/rhesus_spinner"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="41dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="56dp"
                android:textColor="#000000"
                android:id="@+id/register_error"
                android:layout_below="@+id/register"
                android:layout_alignParentRight="true"/>










        </RelativeLayout>
    </ScrollView>

</merge>