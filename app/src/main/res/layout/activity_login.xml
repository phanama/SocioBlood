<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- OAuth WebView -->
    <WebView android:id="@+id/web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <!-- Login progress -->

    <LinearLayout
        android:id="@+id/login_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone" >

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/login_status_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/login_progress_signing_in"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <!-- Login form -->

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            style="@style/LoginFormContainer"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/socioblood_welcome"
                android:textSize = "20sp"
                android:id="@+id/textView"
                android:layout_gravity="start"
                android:layout_alignParentTop="false"
                android:textColor="#000000"
                android:layout_alignParentLeft="false"
                android:layout_alignParentBottom="false"
                android:layout_alignParentStart="true" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/textView"
                android:hint="@string/prompt_id"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#000000"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/password"
                android:hint="Password"
                android:layout_below="@+id/email"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#000000"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="Login"
                android:id="@+id/login"
                android:background="@drawable/btn_back"
                android:textSize="13dp"
                android:layout_margin="5dp"
                android:textColor="#ffffff"
                android:layout_below="@+id/password"
                android:layout_alignParentRight="true"
                android:layout_alignParentLeft="false"
                android:clickable="true"
                android:gravity="center_vertical|center_horizontal" />

            <Button
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="Register"
                android:id="@+id/registerbtn"
                android:background="@drawable/btn_back"
                android:layout_below="@+id/password"
                android:layout_margin="5dp"
                android:textSize="13dp"
                android:textColor="#ffffff"
                android:layout_alignParentLeft="true"
                android:layout_alignWithParentIfMissing="false"
                android:layout_alignParentTop="false"
                android:clickable="true"
                android:gravity="center_vertical|center_horizontal" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Forgot Password"
                android:background="@drawable/btn_red_back"
                android:id="@+id/passres"
                android:layout_below="@+id/login"
                android:layout_alignParentRight="true"
                android:layout_alignParentLeft="true"
                android:textSize="13dp"
                android:textColor="#000000"
                android:gravity="center_vertical|center_horizontal" />

            <com.facebook.login.widget.LoginButton
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:text="@string/login_facebook"
                android:id="@+id/facebook_login"
                android:background="@drawable/btn_blue_back"
                android:layout_margin="8dp"
                android:textColor="#ffffffff"
                android:layout_below="@+id/passres"
                android:layout_centerInParent="true"
                android:gravity="center_vertical|center_horizontal" />


            <com.twitter.sdk.android.core.identity.TwitterLoginButton
                android:id="@+id/twitter_login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/facebook_login"
                android:layout_centerInParent="true"
                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="56dp"
                android:id="@+id/loginErrorMsg"
                android:textColor="#000000"
                android:layout_below="@+id/twitter_login_button"
                android:layout_alignParentLeft="true"/>






        </RelativeLayout>
    </ScrollView>

</merge>